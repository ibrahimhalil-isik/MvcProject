@using EntityLayer.Concrete

@model List<Writer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yazarlar Sayfası</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    Yazar
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>@item.WriterName @item.WriterSurName</b></h2>
                                            <p class="text-muted text-sm"><b>Hakkında:</b> @item.WriterAbout </p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mail: @item.WriterMail </li>
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="~/Images/MyPhoto.jpg" alt="" class="rounded-circle img-fluid ">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="#" class="btn btn-sm bg-teal">
                                            <i class="fas fa-comments"></i> Yazarın Başlıkları
                                        </a>
                                        <a href="/Writer/Update?writerId=@item.WriterId" 
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-user-edit"></i> Profili Düzenle
                                        </a>
                                        <a href="/Writer/Delete?writerId=@item.WriterId"
                                           class="btn btn-danger btn-sm">
                                            <i class="fas fa-user-alt-slash"></i> Sil
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <br />
                <a href="~/Writer/Add" 
                    class="btn btn-info">
                    <i class="fas fa-user-check"></i>  Yeni Yazar Ekle
                </a>
                <br /><br /><br />
            </div>
        </div>
    </section>
</body>
</html>
