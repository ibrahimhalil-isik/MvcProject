@model EntityLayer.Concrete.Message

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Yeni Mesaj Gönderme</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <!-- Theme style -->
    <!-- summernote -->
    <link rel="stylesheet" href="~/Themes/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css">

    <script src="~/Themes/AdminLTE-3.0.4/plugins/summernote/summernote.min.js"></script>
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>
<body class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    @Html.Action("ContactPartial", "Contact")
                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                        </div>
                        @using (Html.BeginForm("Add", "Message", FormMethod.Post))
                        {
                            <div class="card-body">
                                @Html.Label("Alıcı")
                                @Html.TextBoxFor(c => c.ReceiverMail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(c => c.ReceiverMail, "", new { @class = "text-danger" })

                                @Html.Label("Gönderen")
                                @Html.TextBoxFor(c => c.SenderMail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(c => c.SenderMail, "", new { @class = "text-danger" })

                                @Html.Label("Konu : ")
                                @Html.TextBoxFor(c => c.Subject, new { @class = "form-control" })
                                @Html.ValidationMessageFor(c => c.Subject, "", new { @class = "text-danger" })

                                @Html.Label("Alıcı")
                                @Html.TextAreaFor(c => c.MessageContent, new { @class = "form-control", id = "compose-textarea" })
                                @Html.ValidationMessageFor(c => c.MessageContent, "", new { @class = "text-danger" })


                                <div class="form-group">
                                    <div class="btn btn-default btn-file">
                                        <i class="fas fa-paperclip"></i> Dosya Ekle
                                        <input type="file" name="attachment">
                                    </div>
                                    <p class="help-block">Max. 32MB</p>
                                </div>
                                <div class="card-footer">
                                    <div class="float-right">
                                        <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i>Taslaklara Kaydet</button>
                                        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                                    </div>
                                    <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</button>
                                </div>
                            </div>
                        }                     

                    </div>
                        <!-- /.card -->
                    </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- jQuery -->
    <script src="~/Themes/AdminLTE-3.0.4/docs/assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Themes/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Themes/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <!-- Summernote -->
    <script src="~/Themes/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Themes/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <!-- Page specific script -->
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote()
        })
    </script>
</body>
</html>
