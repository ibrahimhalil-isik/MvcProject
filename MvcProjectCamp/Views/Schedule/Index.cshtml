                    },
                    {
                        title: 'Xiaomi',
                        start: new Date(2021, 6, 3),
                        backgroundColor: '#00a65a', //Success (green)
                        borderColor: '#00a65a', //Success (green)
                        allDay: true
                    },
                    {
                        title: 'Laptop',
                        start: new Date(2021, 6, 7),
                        backgroundColor: '#00a65a', //Success (green)
                        borderColor: '#00a65a', //Success (green)
                        allDay: true
                    },
                    {
                        title: 'Voleybol',
                        start: new Date(2021, 6, 2),
                        backgroundColor: '#f39c12', //yellow
                        borderColor: '#f39c12', //yellow
                        allDay: true
                    },
                    {
                        title: 'Basketbol',
                        start: new Date(2021, 6, 3),
                        backgroundColor: '#f39c12', //yellow
                        borderColor: '#f39c12', //yellow
                        allDay: true
                    },
                    {
